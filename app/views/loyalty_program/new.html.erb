Choose a new loyalty program

<%= form_for @loyalty do |form| %>
  <div class="form-group">
    <%= form.label :store %>
    <%= form.collection_select(:store_id, Loyalty.all, :id, :store) %>
  </div>
  <div class="form-group">
    <%= form.label :program %>
    <%= form.text_field :program, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :program_num %>
    <%= form.text_field :program_num, class: "form-control" %>
  </div>
  <%= form.button 'Add loyalty program', class: "btn btn-success" %>
<% end %>